{
    "name": "slbot",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/conquext/slbot.git"
    },
    "bugs": {
        "url": "https://github.com/conquext/slbot/issues"
    },
    "homepage": "https://github.com/conquext/slbot#readme",
    "scripts": {
        "build": "tsc",
        "serve": "node -r ./tsconfig-paths.js dist/index.js",
        "start": "npm run serve",
        "dev": "nodemon --exec ts-node -- ./src/index.ts",
        "prod": "npm run build && npm run start",
        "test": "env-cmd -f .env.test jest --config jest.config.ts --detectOpenHandles",
        "test:coverage": "env-cmd -f .env.test jest --forceExit --coverage --verbose",
        "clean": "rm -rf node_modules coverage dist .nyc_output",
        "lint": "tslint -t stylish --project \"tsconfig.json\"",
        "w-ts": "tsc -w"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@slack/bolt": "^3.8.1",
        "@slack/client": "^5.0.2",
        "body-parser": "^1.18.3",
        "compression": "^1.7.4",
        "cors": "^2.8.4",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "helmet": "^3.13.0",
        "http-status": "^1.2.0",
        "jwt-then": "^1.0.1",
        "module-alias": "^2.2.2",
        "moment": "^2.29.1",
        "mongoose": "^5.2.15",
        "reflect-metadata": "^0.1.13",
        "ts-jest": "^27.0.7",
        "tsconfig-paths": "^3.11.0",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.5"
    },
