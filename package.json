        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^27.0.2",
        "@types/morgan": "^1.9.3",
        "@types/node": "^10.9.4",
        "env-cmd": "^10.1.0",
        "jest": "^27.3.1",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.4",
        "ts-node": "^10.4.0",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "typescript": "^4.4.4"
    },
    "_moduleDirectories": [
        "src"
    ]
